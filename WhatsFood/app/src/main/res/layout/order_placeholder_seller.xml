<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OrderPlaceHolding"
    >

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="194dp"
        android:background="@drawable/order_placeholder_background"
        android:paddingHorizontal="10dp"
        android:paddingVertical="6dp"
        >

        <TextView
            android:id="@+id/result"
            android:layout_width="76dp"
            android:layout_height="19dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="#Order ID"
            android:textColor="@color/red"
            android:textSize="16dp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            />

        <RelativeLayout
            android:layout_below="@id/result"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_gravity="bottom"
            tools:ignore="ExtraText">

            <TextView
                android:id="@+id/buyersName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="Buyer's name"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/buyersName"
                android:layout_marginTop="12dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:text="Address: Lorem Ipsum is simply dummy text of the printing and typesetting industry."
                android:textColor="@color/white"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/priceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Price:"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/priceAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="1000000 VND"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:textStyle="bold" />/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
